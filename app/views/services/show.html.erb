<%# TODO: MIGRATE TO USERS SHOW PAGE  %>
<div class="container my-5">
  <div class="row">
    <% if @service.photos.attached? %>
      <% @service.photos.each do |photo| %>
        <div class="col-4">
          <div class="servicecard-hello">
            <%= image_tag(photo, class: 'art-img') %>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= "no image" %>
      <%# TODO: placeholder goes here %>
    <% end %>
  </div>
</div>

<div class="container my-5">
  <div class="row text-center">
    <div class="col-6 offset-3">
      <div class="servicecard-hello-info">
          <h1><%= @service.title %></h1>
          <b>Price:</b> <%= @service.price %><br>
          <b>Description:</b> <%= @service.description %><br>
          <b>Category:</b> <%= @service.category %><br>
          <b>service by:</b> <%= @service.user.name %><br>
      </div>
    </div>
  </div>
</div>

<div class="container mb-5">
  <div class="row justify-content-center">
    <%= link_to 'Book Now', new_service_booking_path(@service), class: "main-button", id: "new-booking" %>
    <%# Trigger the modal instead of going to the page %>
  </div>
</div>

<%# modal %>
<div class="modal fade" id="newBookingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Book artist for a service: <strong><%= @service.title %></strong> by <%= @service.user.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= render 'bookings/form' %>
    </div>
  </div>
</div>

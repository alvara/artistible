<%# collection = Service.where(user: @booking.service.user).order(:title) if @booking.service%>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <% service = booking.service if booking.service.present? %>
      <% if service.present? %>
        <%= simple_form_for [booking] do |f| %>
          <%= f.input :start_time, as: :string, required: true, input_html: {class: "start_time"} %>
          <%= f.input :end_time, as: :string, required: true, input_html: {class: "end_time"} %>
          <div class="row justify-content-between px-3 py-4">
            <%= f.submit class: "main-button" %>
            <%= link_to 'Cancel', '', class: "main-button cancel-button", data: { bookingid: booking.id } %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

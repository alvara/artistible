<div class="card-hello">
  <% if service.photos.attached? %>
    <%= image_tag(service.photos.first, class: 'art-img') %>
  <% else %>
    <%# TODO: placeholder goes here %>
  <% end %>
  <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class='avatar-bordered'/>
  <div class="card-hello-info">
    <h3><%= service.title %></h3>
    <p><%= service.description %></p>
    <p><i class="yen fas fa-yen-sign"><%= service.price %></i></p>
    <p><i class="star fas fa-star">Rating</i></p>
  </div>
  <%= link_to service_path(service), class: 'card-hello-link-wrapper' do %><% end %>
</div>
